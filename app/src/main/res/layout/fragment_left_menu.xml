        <LinearLayout
            android:id="@+id/menu_expand_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_normal_search_tv"
                style="@style/MenuTextSmall"
                android:layout_marginLeft="70dp"
                android:text="@string/normal_search"/>


            <TextView
                android:id="@+id/menu_advance_search_tv"
                style="@style/MenuTextSmall"
                android:layout_marginLeft="70dp"
                android:text="@string/advance_search"/>


        </LinearLayout>

        <TextView
            android:id="@+id/menu_traffic_state_tv"
            style="@style/MenuText"
            android:drawableLeft="@drawable/ic_traffic_white"
            android:drawablePadding="@dimen/large_padding"
            android:text="@string/traffic_state"/>

        <LinearLayout
            android:id="@+id/ll_fragment_left_menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fragment_left_menu_view_traffic"
                style="@style/MenuTextSmall"
                android:layout_marginLeft="70dp"
                android:text="@string/view_traffic"/>

            <TextView
                android:id="@+id/tv_fragment_left_menu_view_event"
                style="@style/MenuTextSmall"
                android:layout_marginStart="70dp"
                android:text="@string/view_event"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fragment_left_menu_report"
            style="@style/MenuText"
            android:drawableLeft="@drawable/ic_traffic_white"
            android:drawablePadding="@dimen/large_padding"
            android:text="@string/report"/>

        <TextView
            android:id="@+id/menu_signout_tv"
            style="@style/MenuText"
            android:drawableLeft="@drawable/ic_signout_white"
            android:drawablePadding="@dimen/large_padding"
            android:text="@string/sign_out"/>

