<ScrollView android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/bg_menu"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/bg_menu"
        android:clickable="true"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/ll_fragment_left_menu_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menu_profile_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="@dimen/small_padding"
                android:layout_marginTop="@dimen/large_padding"
                android:src="@drawable/profile"
                app:civ_border_color="@color/grey"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/profile_name_tv"
                style="@style/MenuText"
                android:layout_margin="@dimen/no_margin"
                android:gravity="center_horizontal"
                android:text="Quận Nguyễn"/>

            <TextView
                android:id="@+id/profile_email_tv"
                style="@style/MenuText"
                android:layout_margin="@dimen/no_margin"
                android:gravity="center_horizontal"
                android:textSize="@dimen/ts_14"
                android:text="quannv@gemvietnam.com"
                android:textStyle="normal"/>
        </LinearLayout>

        <View
            style="@style/GrayLineDivider"
            android:layout_marginTop="@dimen/large_padding"/>

        <TextView
            android:id="@+id/menu_your_location_tv"
            style="@style/MenuText"
            android:drawableLeft="@drawable/ic_location_white"
            android:drawablePadding="@dimen/large_padding"
            android:text="@string/your_location"/>

        <TextView
            android:id="@+id/menu_direction_tv"
            style="@style/MenuText"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/ic_direction_white"
            android:drawablePadding="@dimen/large_padding"
            android:text="@string/waypoints"
            android:textStyle="bold"/>

