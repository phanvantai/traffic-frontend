<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CardViewMap">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/cardview_height</item>
    <item name="android:layout_marginLeft">@dimen/default_margin</item>
    <item name="android:layout_marginRight">@dimen/default_margin</item>
  </style>

  <style name="MenuText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/ts_16</item>
    <item name="android:textColor">@color/menu_item</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">@dimen/large_padding</item>
  </style>

  <style name="GrayLineDivider">
    <item name="android:layout_height">0.5dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:background">@color/boder_divider</item>
  </style>

  <style name="MenuIcon">
    <item name="android:layout_width">@dimen/menu_icon_size</item>
    <item name="android:layout_height">@dimen/menu_icon_size</item>
    <item name="android:layout_marginRight">@dimen/default_margin</item>
    <item name="android:layout_centerInParent">true</item>
  </style>

  <style name="MenuTextSmall">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/ts_14</item>
    <item name="android:textColor">@color/menu_item</item>
    <item name="android:padding">@dimen/large_padding</item>
    <item name="android:layout_marginLeft">@dimen/default_margin</item>
    <item name="android:gravity">center_vertical</item>
  </style>
</resources>
